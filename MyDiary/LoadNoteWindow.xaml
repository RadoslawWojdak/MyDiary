<Window x:Class="MyDiary.LoadNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDiary"
        mc:Ignorable="d"
        Title="MyDiary" Height="300" Width="300" SizeChanged="Window_SizeChanged">
    <Grid>
        <ScrollViewer x:Name="notesScroll" HorizontalAlignment="Left" Height="237" VerticalAlignment="Top" Width="292" VerticalScrollBarVisibility="Visible" Margin="0,32,0,0">
            <StackPanel x:Name="notesStackPanel"/>
        </ScrollViewer>
        <ScrollViewer x:Name="tagsScroll" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="292" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Visible">
            <StackPanel x:Name="tagsStackpanel" Orientation="Horizontal"/>
        </ScrollViewer>

    </Grid>
</Window>
